{
	"trailingComma": "all",
	"semi": false,
	"singleQuote": true,
	"singleAttributePerLine": true,
	"useTabs": true,
	"plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"],
	"overrides": [
		{
			"files": "**/lwc/**/*.html",
			"options": { "parser": "lwc" }
		},
		{
			"files": "*.{cmp,page,component}",
			"options": { "parser": "html" }
		}
	]
}
